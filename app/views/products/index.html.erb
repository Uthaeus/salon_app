<div class='container'>
  <h1>Products</h1>

  <div class='product-index'>
    <div class='row'>
      <% @products.each do |product| %>
        
        <div class='col-md-4'>
          
          <p><%= link_to "#{product.title}", product %></p>
          <p><%= product.brand %></p>
          <p><%= "#{'$%.2f' % product.price}" %></p>
          <p><%= link_to 'Show', product %></p>
          
        </div>

        <div class='col-md-8'>
          
          <%= image_tag product.image, width: '10%' %>
          
        </div>
        
      <% end %>
    </div>
  </div>
  <%= link_to 'New Product', new_product_path, class: 'btn btn-primary' %>
</div>



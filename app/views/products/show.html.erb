<div class='container product-container'>
  <div class='row'>
    <div class='col-md-7'>
      <%= image_tag product_img(@product.image), width: '100%' %>
    </div>

    <div class="col-md-5">
      <h1><%= @product.brand %></h1>

      <hr>

      <em><%= @product.title %></em>

      <h4><%= @product.price %></h4>
    </div>
  </div>
</div>


<%= link_to 'Edit', edit_product_path(@product), class: 'btn btn-secondary' %> |
<%= link_to 'Back', products_path, class: 'btn btn-secondary' %>
